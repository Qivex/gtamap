<div class="propertygroup" tabindex="0">
	<p @click.left="nextState" @click.right.prevent="logState">Group {{id}}, State {{state}}</p>
	<ul>
		<!-- https://vuejs.org/guide/essentials/list.html#v-for-with-v-if -->
		<li v-for="child in children" v-scope="child.children ? PropertyGroup(child, self) : Property(child, self)"></li>
	</ul>
</div>