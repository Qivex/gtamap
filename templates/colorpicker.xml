<div class="colorpicker">
	<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 128 128" width="100%" height="100%" preserveAspectRatio="xMinYMin meet">
		<defs>
			<path id="colorpicker-path" d="M64,16 a48,48 0,1,1 0,96 a48,48 0,1,1 0,-96"/>
		</defs>
		<circle v-for="(color,index) in colors" :fill="color" :r="getRadius()" @click.left="selectColor(index)">
			<animateMotion calcMode="discrete" :keyPoints="getKeyPoints(index)" keyTimes="0;1">
				<mpath href="#colorpicker-path"/>
			</animateMotion>
		</circle>
	</svg>
</div>